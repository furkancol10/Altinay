@page "/project"
@using Altinay.Projects
@using Altinay.Localization
@using Volo.Abp.AspNetCore.Components.Web
@inherits AltinayComponentBase
@inject IProjectAppService ProjectAppService
@inject AbpBlazorMessageLocalizerHelper<AltinayResource> LH

<Card>
    <CardHeader>
        <Row Class="justify-content-between">
            <Column ColumnSize="ColumnSize.IsAuto">
                <h2>@L["Projects"]</h2>
            </Column>
            <Column ColumnSize="ColumnSize.IsAuto">
                @if (CanCreateProject)
                {
                    <Button Color="Color.Primary"
                            Clicked="OpenCreateProjectModal">
                        @L["NewProject"]
                    </Button>
                }
            </Column>
        </Row>
    </CardHeader>
    <CardBody>
        <DataGrid TItem="ProjectDto"
                  Data="ProjectList"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  PageSize="PageSize">
            <DataGridColumns>
                <DataGridColumn Width="150px"
                                TItem="ProjectDto"
                                Field="@nameof(ProjectDto.Id)"
                                Sortable="false"
                                Caption="@L["Actions"]">
                    <DisplayTemplate>
                        <Dropdown>
                            <DropdownToggle Color="Color.Primary">
                                @L["Actions"]
                            </DropdownToggle>
                            <DropdownMenu>
                                @if (CanEditProject)
                                {
                                    <DropdownItem Clicked="() => OpenEditProjectModal(context)">
                                        @L["Edit"]
                                    </DropdownItem>
                                }
                                @if (CanDeleteProject)
                                {
                                    <DropdownItem Clicked="() => DeleteProjectAsync(context)">
                                        @L["Delete"]
                                    </DropdownItem>
                                }
                            </DropdownMenu>
                        </Dropdown>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="ProjectDto"
                                Field="@nameof(ProjectDto.ProjectCode)"
                                Caption="@L["ProjectCode"]"></DataGridColumn>
                <DataGridColumn TItem="ProjectDto"
                                Field="@nameof(ProjectDto.ProjectName)"
                                Caption="@L["ProjectName"]"></DataGridColumn>
                <DataGridColumn TItem="ProjectDto"
                                Field="@nameof(ProjectDto.ProjectDescription)"
                                Caption="@L["ProjectDescription"]"></DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>

<Modal @ref="CreateProjectModal">
    <ModalBackdrop />
    <ModalContent IsCentered="true">
        <Form>
            <ModalHeader>
                <ModalTitle>@L["NewProject"]</ModalTitle>
                <CloseButton Clicked="CloseCreateProjectModal" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@CreateValidationsRef" Model="@NewProject" ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["ProjectCode"]</FieldLabel>
                            <TextEdit @bind-Text="@NewProject.ProjectCode">
                                <Feedback>
                                    <ValidationError/>
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["ProjectName"]</FieldLabel>
                            <TextEdit @bind-Text="@NewProject.ProjectName">
                                <Feedback>
                                    <ValidationError/>
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["ProjectDescription"]</FieldLabel>
                        <MemoEdit Rows="3" @bind-Text="@NewProject.ProjectDescription">
                            <Feedback>
                                <ValidationError/>
                            </Feedback>
                        </MemoEdit>
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateProjectModal">
                    @L["Cancel"]
                </Button>
                <Button Color="Color.Primary"
                        Type="@ButtonType.Submit"
                        PreventDefaultOnSubmit="true"
                        Clicked="CreateProjectAsync">
                    @L["Save"]
                </Button>
            </ModalFooter>
        </Form>
    </ModalContent>
</Modal>

<Modal @ref="EditProjectModal">
    <ModalBackdrop />
    <ModalContent IsCentered="true">
        <Form>
            <ModalHeader>
                <ModalTitle>@EditingProject.ProjectName</ModalTitle>
                <CloseButton Clicked="CloseEditProjectModal" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@EditValidationsRef" Model="@EditingProject" ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["ProjectCode"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingProject.ProjectCode">
                                <Feedback>
                                    <ValidationError/>
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["ProjectName"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingProject.ProjectName">
                                <Feedback>
                                    <ValidationError/>
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["ProjectDescription"]</FieldLabel>
                        <MemoEdit Rows="3" @bind-Text="@EditingProject.ProjectDescription">
                            <Feedback>
                                <ValidationError/>
                            </Feedback>
                        </MemoEdit>
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditProjectModal">
                    @L["Cancel"]
                </Button>
                <Button Color="Color.Primary"
                        Type="@ButtonType.Submit"
                        PreventDefaultOnSubmit="true"
                        Clicked="UpdateProjectAsync">
                    @L["Save"]
                </Button>
            </ModalFooter>
        </Form>
    </ModalContent>
</Modal>
